<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/appBarLayout"
            app:layout_behavior="@string/app_scale_behavior"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                >

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.8"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/imageView"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.5"
                        >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
               android:src="@mipmap/timg"
                android:scaleType="fitXY"
                />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5"
                    android:layout_marginTop="250dp"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="function"
                        android:background="@color/color_qin"
                        app:layout_collapseMode="parallax"
                        />
                </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0"
                    android:background="@android:color/white"
                    android:tag="toolbar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Widget.AppCompat.Toolbar" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="hellotitle"
                    android:gravity="center"
                    android:layout_height="50dp"
                    android:id="@+id/tv_title"
                    android:alpha="0"
                    android:background="@color/blue"
                    app:layout_collapseMode="pin"
                    />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/scrollerView"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="MainActivity"
                    android:gravity="center"
                    android:onClick="toMainActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="RevealActivity"
                    android:gravity="center"
                    android:onClick="toRevealActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="AnimTestActivity"
                    android:onClick="toAnimTestActivity"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="SlidingConfictActivity"
                    android:gravity="center"
                    android:onClick="toSlidingConfictActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="RefreshBehaviorActivity"
                    android:gravity="center"
                    android:onClick="toRefreshBehaviorActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="RevealActivity"
                    android:gravity="center"
                    android:onClick="toRevealActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="AnimTestActivity"
                    android:onClick="toAnimTestActivity"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="SlidingConfictActivity"
                    android:gravity="center"
                    android:onClick="toSlidingConfictActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="MainActivity"
                    android:gravity="center"
                    android:onClick="toMainActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="RevealActivity"
                    android:gravity="center"
                    android:onClick="toRevealActivity"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="AnimTestActivity"
                    android:onClick="toAnimTestActivity"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="SlidingConfictActivity"
                    android:gravity="center"
                    android:onClick="toSlidingConfictActivity"
                    />
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

        <com.example.archermind.myapplication.views.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_avater"
            app:layout_anchor="@id/lin_content"
            app:layout_anchorGravity="top"
            android:layout_marginLeft="20dp"
            app:layout_behavior="@string/avater_scale_behavior"
            ></com.example.archermind.myapplication.views.CircleImageView>

    </android.support.design.widget.CoordinatorLayout>


</android.support.constraint.ConstraintLayout>